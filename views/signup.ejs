<%- include('partials/header') -%>
    <main class="container">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.success) { %>
                    <% messages.success.forEach( el => { %>
                        <div class="alert alert-successs"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                      </div>
                      <!-- <input type="radio"name="type" id="customer" value="customer"> <label for="customer">customer</label>
                      <input type="radio"name="type" id="provider" value="provider"> <label for="provider">provider</label>  commenting out not working on test is because the name attribute is the same-->
                      <label for="usertype">type</label>
                    <select class="form-select" name="usertype" id="usertype">
                        <option value="customer">customer</option>
                        <option value="provider">provider</option>
                      
                    </select>
                    <label for="usertype">Requested Services</label>
                    <select class="form-select" name="servicetype" id="servicetype">
                        <option value="traditional">Traditional Snow Removal</option>
                        <option value="snowblower">Snow Blower Blizzard Buster</option>
                        <option value="plow">Snow Plow</option>
                        <option value="communityplow">Community plow</option>
                        <option value="communityplowparty">Community plow party</option>
                      
                    </select>
                </select>
                <label for="usertype">Urgency</label>
                <select class="form-select" name="urgencytype" id="urgencytype">
                    <option value="thirtymins">30 mins</option>
                    <option value="sixitymins">1 hour</option>
                    <option value="twohours">2 hours</option>
                    <option value="threehours">3hours</option>
                    <option value="twentyfourhours">24 hours</option>
                    <option value="seventytwohours">72 hours</option>
                  
                </select>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>